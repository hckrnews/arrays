  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test current file",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--test",
        "${file}"
      ],
      "cwd": "${workspaceRoot}",
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test and watch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--watch",
        "--test",
        "${file}"
      ],
      "cwd": "${workspaceRoot}",
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
    }
  ]
}
