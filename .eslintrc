{
    "root": true,
    "extends": [
        "@hckrnews/eslint-config"
    ],
    "plugins": [
        "import",
        "jsdoc",
        "n",
        "sonarjs"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],
        "consistent-return": "warn",
        "eqeqeq": "warn"
    },
    "env": {
        "es6": true,
        "node": true,
        "jquery": false,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    }
}
